{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-lg-3 panel-group">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="my-4">Sukurti </h2>
                    </div>
                    <div class="panel-body">
                        <div class="list-group">
                            <a href="/group/add" class="list-group-item">Sukurti grupe</a>
                        </div>
                    </div>
                </div>
            </div>
            {% if group %}
            <div class="col-lg-9">
                <h2>Grupes</h2>
                <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th>Nr</th>
                        <th>Pavadinimas</th>
                    </tr>
                    {% for g in group %}
                        <tr>
                            <td>#{{  g.id }}</td>
                            <td>{{ g.name }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            {% else %}
                <h2>NÄ—ra grupiu</h2>
            {% endif %}
        </div>
    </div>

{% endblock %}
