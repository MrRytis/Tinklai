<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Sistema{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        {% endblock %}

        {#<link rel="stylesheet" href="css/ie6.css" type="text/css" media="all" />#}

        {% block javascripts %}
            <script src="{{ asset('js/jquery-1.4.1.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('js/jquery.jcarousel.pack.js') }}" type="text/javascript"></script>
            <script src="{{ asset('js/jquery-func.js') }}" type="text/javascript"></script>
        {% endblock %}
    </head>
    <body>
        {% block menu %}
            <nav class="navbar navbar-inverse">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="/">Sistema</a>
                    </div>
                    <ul class="nav navbar-nav">
                        {% if is_granted('ROLE_ADMIN') %}
                            <li><a href="/add_file">Prideti nauja faila</a></li>
                            <li><a  href="/register">Registruoti nauja vartotoja</a></li>
                            <li><a href="/group/list">Grupes</a></li>
                            <li><a href="/modul/list">Moduliai</a></li>
                            <li><a href="/message/list">Zinutes</a></li>
                            <li><a href="/dept/list">Skolos</a></li>
                        {% endif %}
                        {% if is_granted('ROLE_STUDENT') %}
                            <li><a href="/dept">Skolos</a></li>
                            <li><a href="/work">Atsiskaitymai</a></li>
                        {% endif %}
                        {% if is_granted('ROLE_LECTOR') %}
                            <li><a href="/group/list">Studentu sara≈°as</a></li>
                        {% endif %}
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        {% if is_granted('ROLE_LECTOR') or is_granted('ROLE_STUDENT') or is_granted('ROLE_ADMIN')%}
                            <li><a href="/logout">Atsijungti</a></li>
                        {% else %}
                            <li><a href="/login">Prisijungti</a></li>
                        {% endif %}
                    </ul>
                </div>
            </nav>
        {% endblock %}
        {% block body %}{% endblock %}

    </body>
</html>
