{% extends 'base.html.twig' %}



{% block body %}
    <div style="width: 30%; margin-left: auto; margin-right: auto;" class="p-3 mx-auto border-danger rounded">
        <h1 class="text-center">Apmokėjimas</h1>
        {% if error %}
            <div class="alert alert-danger text-left">
                <ul class="list-unstyled">
                    {% for message in error_msgs %}
                        <li>{{ message }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}
        <form method="post" action="/dept/payment/save/{{ currentId }}">
            <div class="form-group">
                <label for="name">Vardas</label>
                <input class="form-control" type="text" id="name" name="name" value="{{ last_name }}" />
            </div>
            <div class="form-group">
                <label for="name">Pavardė</label>
                <input class="form-control" type="text" id="surname" name="surname" value="{{ last_surname }}" />
            </div>
            <div class="form-group">
                <label for="email">Bankas</label>
                <input class="form-control" type="text" name="bank" id="bank" value="{{ last_bank }}" />
            </div>
            <div class="form-group">
                <label for="email">Kortelės numeris</label>
                <input class="form-control" type="number" name="card" id="card"/>
            </div>
            <button type="submit" class="btn btn-secondary">Apmokėti</button>
        </form>
    </div>
{% endblock %}
